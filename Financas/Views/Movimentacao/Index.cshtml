@model IList<Financas.Entidades.Movimentacao>


@Html.ActionLink("Nova Movimentacao", "Form", "Movimentacao")

<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Usuario</td>
            <td>Valor</td>
            <td>Tipo</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Usuario.Nome</td>
                <td>@m.Valor</td>
                <td>@m.Tipo</td>
            </tr>
        }
    </tbody>
</table>